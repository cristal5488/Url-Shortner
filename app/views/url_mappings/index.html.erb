<p id="notice"><%= notice %></p>

<h1>Url Mappings</h1>

<table>
  <thead>
    <tr>
      <th>Longurl</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @url_mappings.each do |url_mapping| %>
      <tr>
        <td><%= url_mapping.longurl %></td>
        <td><a href="<%= url_mapping.longurl %>"><%= "#{request.protocol}#{request.host}:#{request.port}/#{url_mapping.id}" %></a></td>
        <td><%= link_to 'Show', url_mapping %></td>
        <td><%= link_to 'Edit', edit_url_mapping_path(url_mapping) %></td>
        <td><%= link_to 'Destroy', url_mapping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url Mapping', new_url_mapping_path %>
